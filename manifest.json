{
  "manifest_version": 3,
  "name": "Amazon banana",
  "version": "1.0",
  "description": "An extension that makes the complex Amazon site casual",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "default_title",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.co.jp/*"
      ],
      "css": [
        "main.css"
      ]
    }
  ]
}
